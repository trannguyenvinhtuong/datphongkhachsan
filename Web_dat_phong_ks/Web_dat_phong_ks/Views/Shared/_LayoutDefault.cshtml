<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset='utf-8'>
    <title>@ViewBag.Title</title>    


    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    @*<script src="~/Scripts/bootstrap.bundle.min.js"></script>*@
   
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/brands.css" rel="stylesheet" />
    <link href="~/Content/solid.css" rel="stylesheet" />
    
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>

    <link href="~/Content/CSS/headerstyle.css" type="text/css" rel="stylesheet" />

    <link href="~/Content/CSS/footerstyle.css" type="text/css" rel="stylesheet" />

    <link href="~/Content/CSS/homestyle.css" type="text/css" rel="stylesheet" />

    <link href="~/Content/CSS/phongstyle.css" type="text/css" rel="stylesheet" />

    <link href="~/Content/CSS/searchbarstyle.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div style="background-color: cornflowerblue; height: 100px; width: 100%;"></div>
    <div style="background-color:#f8f9fa">
        <div class="container">

            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand icon-style" href="@Url.Action("Index","Home")">Find hotel <i class="fas fa-hotel"></i></a>
                    <button class="navbar-toggler navbar-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item ms-3">
                                <a class="nav-link active menu-item" aria-current="page" href="@Url.Action("Index","Home")">Khách sạn</a>
                            </li>
                            <li class="nav-item ms-3">
                                <a class="nav-link menu-item" href="#">Tour</a>
                            </li>
                            <li class="nav-item ms-3">
                                <a class="nav-link menu-item" href="#">Combo trọn gói</a>
                            </li>
                            <li class="nav-item ms-3">
                                <a class="nav-link menu-item" href="#">Blog</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle menu-item" style="font-size: 20px;" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Đăng nhập</a></li>
                                    <li><a class="dropdown-item" href="#">Đăng ký</a></li>
                                    
                                </ul>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </nav>

        </div>
    </div>


    <div>
        @RenderBody()
    </div>

    <br/>
    <br/>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="footer-td">ĐỀ TÀI XÂY DỰNG ỨNG DỤNG ĐẶT PHÒNG KHÁCH SẠN</h1>
                    <p>Sinh viên tham gia:</p>
                </div>
                <div class="col">
                    <h1 class="footer-td">QUY ĐỊNH CHUNG</h1>
                </div>
                <div class="col">
                    <h1 class="footer-td">LIÊN HỆ VỚI CHÚNG TÔI</h1>
                    <a href="#" class="icon-lh">
                        <i class="fab fa-facebook-square"></i>
                    </a>
                    <a href="#" class="icon-lh">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="icon-lh">
                        <i class="fab fa-twitter-square"></i>
                    </a>
                    <a href="#" class="icon-lh">
                        <i class="fab fa-google-plus"></i>
                    </a>
                </div>
            </div>
        </div>
    
    </div>
</body>
</html>
